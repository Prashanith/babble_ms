{
  "compilerOptions": {
    "target": "ES2022",                    // Latest JavaScript features (ES2022)
    "module": "nodenext",                   // Use ESM modules for Node.js
    "moduleResolution": "NodeNext",         // ESM-style resolution (compatible with Node.js)
    "lib": ["ES2022"],                      // Latest JS standard library features
    "allowImportingTsExtensions": true,     // Allow importing without the .ts extension
    "rootDir": "src",                       // Source code directory
    "outDir": "dist",                       // Output directory after TypeScript compilation
    "strict": true,                         // Enable all strict type checks
    "noImplicitAny": true,                  // Disallow the `any` type implicitly
    "noImplicitThis": true,                 // Disallow implicit `this` types
    "strictNullChecks": true,               // Ensure strict null checks are applied
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in filenames
    "esModuleInterop": true,                // Allow compatibility between CommonJS and ESM
    "skipLibCheck": true,                   // Skip type checking for declaration files
    "allowSyntheticDefaultImports": true,   // Allow default imports in ESM
    "resolveJsonModule": true,              // Allow importing JSON files as modules
    "sourceMap": true,                      // Enable source maps for debugging
    "noEmit": false                         // Let esbuild handle emitting files
  },
  "include": ["src"],                       // Include all files in the `src` directory
  "exclude": ["node_modules", "dist"]       // Exclude `node_modules` and `dist` from compilation
}
